@model IEnumerable<CRM.Models.Models.Multi2>
@{
    ViewBag.Title = "Multi";
}

<script>

    $(document).ready(function () {
        $('#opcAdmin').addClass("nav-item active submenu");
        $('#admin').addClass("collapse show");
        $('#sopcMulti').addClass("active");
    });
  
</script>

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Acceso a Multiempresa</h4>
    </div>
    <div class="row">

        <div class="col-md-12">
            <div class="card">

                <div class="card-body">

                    @if (Model == null)
                    {
                        <label>Sin datos</label>
                    }
                    else
                    {
                        <table class="table display compact table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Empresa</th>
                                    <th>Usuario</th>
                                    <th>Eliminar Acceso</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (CRM.Models.Models.Multi2 p in Model)
                                {
                                    <tr>
                                        <td>@p.Configuracion.Nombre</td>
                                        <td>@p.Usuarios.Nombre</td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>

            </div>
        </div>


    </div>
</div>