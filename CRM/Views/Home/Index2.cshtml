                    }
                });
            },
            complete: function () {
                $('#Espera').hide();
            },
            error: function (data) {
                swal({
                    title: 'CRM ASAE',
                    text: 'Ha habido un error al intentar procesar los datos (ModificarBitacora)',
                    icon: 'error',
                    buttons: {
                        confirm: {
                            className: 'btn btn-error'
                        }
                    }
                });
