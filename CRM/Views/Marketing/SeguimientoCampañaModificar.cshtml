@model CRM.Models.Models.MarketingModelos
@{
    ViewBag.Title = "Modificar Seguimiento";
}

<script>

    $(document).ready(function () {

        $('#opcMark').addClass("nav-item active submenu");
        $('#mark').addClass("collapse show");
        $('#sopcCampañas').addClass("active");
        $('#Espera').hide();

        $('form').submit(function () {
            $(this).find("button[type='submit']").addClass('is-loading').prop('disabled', true);
        });

    });


</script>

<input type="hidden" id="IdConfiguracion" value="@Session["IdConfiguracion"].ToString()" />

<div class="page-inner">    
    <div class="page-header">
        <h4 class="page-title">Modificación del Seguimiento de la Campaña</h4>
    </div>
    <div class="row">

        <div class="col-md-12">

            <div class="card">

                <div id="Espera" class="card-body is-loading is-loading-lg">
                    Card content
                </div>

                <div class="card-body">

                    <form method="post" action="/Marketing/SeguimientoCampañaModificar">

                        <input type="hidden" name="Registro" value="@Request["Registro"]" />
                        <input type="hidden" name="IdCampaña" value="@Request["IdCampaña"]" />

                        <h4>Modificar</h4>

                        <div class="row">

                            <div class="col-md-8 col-lg-8">

                                <div class="form-group form-inline">
                                    <label for="Objetivo" class="col-md-3 col-form-label">Seguimiento</label>
                                    <div class="col-md-9">
                                        <textarea name="Seguimiento" rows="2" cols="92" class="form-control">@Model.MarketingSeguimiento.Seguimiento</textarea>
                                    </div>
                                </div>

                            </div>

                            <div class="col-md-4 col-lg-4">
                                <label class="col-md-3 col-form-label">&nbsp;</label>
                            </div>


                        </div>

                        <div class="card-action label-align-center">
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>

                    </form>


                </div>
            </div>
        </div>
    </div>
</div>


